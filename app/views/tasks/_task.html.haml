= turbo_frame_tag task do
  .quote
    = link_to task.name, task_path(task), 
      data: {turbo_frame: "_top"}            
    .quote__actions
      = button_to "Delete",     
        task_path(task),      
        method: :delete,        
        class: "btn btn--light" 
      = link_to "Edit",         
        edit_task_path(task), 
        class: "btn btn--light" 
