%header.navbar
	- if user_signed_in?
		.navbar__brand
			Company Name
		.navbar__name
			Current User Name
		= link_to "Log Out",
			destroy_user_session_path,
			data: { "turbo-method": :delete },
			class: "btn btn--dark"
	-else
		= link_to "Log In",
			new_user_session_path,
			class: "btn btn--dark navbar__right"