<main class="container">
	<div class="header">
		<h1>Quotes</h1>
		<%= link_to "New quote",
		            new_quote_path,
		            class: "btn btn--primary",
		            data: {turbo_frame: dom_id(Quote.new)} %>
	</div>
	<%= turbo_frame_tag Quote.new %>
	<%= turbo_frame_tag "quotes" do %>
		<%= render @quotes %>
	<% end %>	
</main>
<footer>
	This application is based on the tutorial for Hotwire/Turbo at <%= link_to "https://www.hotrails.dev/turbo-rails" %>
</footer>