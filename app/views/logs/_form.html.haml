= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start_at
    = f.datetime_field :start_at
  .field
    = f.label :end_at
    = f.datetime_field :end_at
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :task
    = f.text_field :task
  .actions
    = f.submit 'Save'
