%h1 Listing projects

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Start at
      %th End at
      %th User
      %th Product
      %th Project status
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= project.start_at
        %td= project.end_at
        %td= project.user
        %td= project.product
        %td= project.project_status
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Project', new_project_path
